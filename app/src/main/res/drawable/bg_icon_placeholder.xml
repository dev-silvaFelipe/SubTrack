<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#1A000000" />
            <padding android:bottom="2dp" />
        </shape>
    </item>

    <item android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#00D26A"
                android:endColor="#00A859"
                android:angle="45" />
            <size
                android:width="64dp"
                android:height="64dp" />
        </shape>
    </item>

    <item android:top="2dp" android:left="8dp" android:right="8dp" android:bottom="40dp">
        <shape android:shape="oval">
            <solid android:color="#4DFFFFFF" />
        </shape>
    </item>
</layer-list>